{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",

    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": false,
    "noImplicitAny": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
